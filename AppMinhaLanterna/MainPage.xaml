<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMinhaLanterna.MainPage" BackgroundColor="White">

    <StackLayout>
        <Label x:Name="statusLabel"
               Text="Lanterna desligada." 
               HorizontalOptions="Center"
               FontSize="Large"
               TextColor="Green"
               Margin="20"/>
        <ImageButton x:Name="btLigar"
                     Source="desligado.jpg"
                     HorizontalOptions="FillAndExpand"
                     VerticalOptions="FillAndExpand"
                     Margin="20"
                     Aspect="AspectFill" Clicked="btLigar_Clicked"/>
        
    </StackLayout>

</ContentPage>